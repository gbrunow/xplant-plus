{
    "manifest_version": 2,

    "name": "XPLANT Plus",
    "description": "Improvements and extra features to XPLANT",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "assets/icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],

    "icons": {
        "128": "assets/icon.png"
    },

    "permissions": []
}